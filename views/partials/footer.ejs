    document.addEventListener('click', function (e) {
        if (e.target.classList.contains('password-toggle')) {
            var wrapper = e.target.closest('.password-wrapper');
            if (!wrapper) return;
            var input = wrapper.querySelector('.password-input');
            if (!input) return;

            if (input.type === 'password') {
                input.type = 'text';
                e.target.textContent = 'ğŸ™ˆ';
                e.target.setAttribute('aria-label', 'Hide password');
            } else {
                input.type = 'password';
                e.target.textContent = 'ğŸ‘';
                e.target.setAttribute('aria-label', 'Show password');
            }
        }
    });
</script>


<%- include('partials/header', { pageTitle, activePage }) %>

  <section style="padding: 2rem 1.5rem; max-width: 600px; margin: 0 auto;">
    <header class="page-header">
      <div>
        <h1 class="page-title">Forgot Password</h1>
        <p class="page-subtitle">
          Enter your email address and weâ€™ll send you a secure link to reset your password.
        </p>
      </div>
    </header>

    <% if (error) { %>
      <div style="background:#ffe5e5; color:#b00; padding:0.75rem 1rem; border-radius:8px; margin-bottom:1rem;">
        <%= error %>
      </div>
      <% } %>

        <% if (info) { %>
          <div style="background:#e5f5ff; color:#004b80; padding:0.75rem 1rem; border-radius:8px; margin-bottom:1rem;">
            <%= info %>
          </div>
          <% } %>

            <form method="post" action="/forgot-password">
              <div class="form-group">
                <label for="email">Email address</label>
                <input id="email" type="email" name="email" required autocomplete="email" autofocus>
              </div>

              <button type="submit" class="btn btn-primary">Send Reset Link</button>

              <a style="margin-left: 10px;" class="btn btn-outline" href="/login">Back to login</a>
            </form>
  </section>

  <%- include('partials/footer') %>